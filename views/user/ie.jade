doctype html
html
	head
		title Shabo
		style.
			@font-face {
				font-family: "Futura";
				font-style: normal;
				font-weight: normal;
				src: url("/fonts/futura/futura.eot?#iefix") format("embedded-opentype"), url("/fonts/futura/futura.woff") format("woff"), url("/fonts/futura/futura.ttf") format("truetype"), url("/fonts/futura/futura.svg#Futura") format("svg");
			}
			* {
				margin: 0;
				padding: 0;
			}
			html, body {
				height: 100%;
				width: 100%;
				background-image: url("/img/mainBg.jpg");
				background-position: center center;
				background-size: cover;
			}
			.titleWrap {
				display: table;
				width: 100%;
				height: 100%;
			}
			.titleInner {
				display: table-cell;
				vertical-align: middle;
				text-align: center;
			}
			.title {
				background-image: url("/img/titleBg.png");
				width: 381px;
				height: 108px;
				font-family: Futura;
				color: #f59b06;
				font-size: 32px;
				text-shadow: 1px 2px 0 #bb6920;
				display: inline-block;
				padding: 40px 0 0 0;
			}
	body
		div(class="titleWrap")
			div(class="titleInner")
				div(class="title")= "Ваш браузер устарел"
