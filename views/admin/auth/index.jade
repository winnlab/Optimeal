doctype html
html(lang="ru")
	head
		title= 'Вход в административную панель'
		link(rel='stylesheet' href='/js/lib/admin-lte/css/bootstrap.min.css')
		link(rel='stylesheet' href='/css/admin/components/auth.css')
	body
		.container
			.row
				.col-sm-6.col-md-4.col-md-offset-4
					.account-wall
						img.profile-img(src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120")
						form.form-signin(action="login" method="POST")
							input.form-control(type="text" name="username" placeholder="Логин" required autofocus)
							input.form-control(type="password" name="password" placeholder="Пароль" required)
							button.btn.btn-lg.btn-primary.btn-block(type="submit")= "Войти"
						.temp= message